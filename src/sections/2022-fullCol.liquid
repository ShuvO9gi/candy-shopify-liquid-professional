<div class="section-container backgroundDarkPurple">
	<div class="page-container">
      <div class="row three-col-section-bigPadding">
      	<div class="col-12 ">
            <div class="full-image"><img src="{{ section.settings.image | image_url}}"></div>
            <div class="full-small-headline">{{ section.settings.small-headline }}</div>  
            <div class="full-headline">{{ section.settings.headline }}</div>  
            <div class="full-content">{{ section.settings.content }}</div>  
            <a href="{{ section.settings.button_destination }}">
                <div class="orangeButton type-style-button-text mobileBig">
                  {{ section.settings.button_text }}
    			</div>
    		</a>          
        </div>
      </div>
    </div>
</div>
