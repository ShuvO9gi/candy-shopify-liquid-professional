<div class="section-container">
	<div class="page-container banner_2">
		<div class="row">
			<div class="col-12">
				<h2 class="numberBullets type-style-h2-regular">
                  {{ section.settings.headline }}
                </h2>
			</div>
		</div>
		<div class="row">
			<div class="col-6">

              {% assign listNumber = 1 %}
              
              {%- for block in section.blocks -%}
				<div class="row numberBoxMargin">
					<div class="col-3">
						<div class="numberBox">
							<div class=" headline">
								{{ listNumber }}	
							</div>
						</div>
					</div>
					<div class="col-9">
						<div class="uspNumberBox type-style-usp-p">
							{{ block.settings.content }}
						</div>
					</div>	
				</div>                
                {% assign listNumber = listNumber | plus: 1 %}
              {%- endfor -%}
				<div class="row hideOnMobile">
					<div class="col-3"></div>
					<div class="col-9">
						<a href="{{ section.settings.button_destination }}" class="normalLink" style="position: relative;">
							<div class="orangeButton type-style-button-text">
								{{ section.settings.button_text }}
							</div>
						</a>
					</div>
				</div>
				<div class="row hideOnDesktop">
					<div class="col-12" style="text-align: center;">
						<a href="{{ section.settings.button_destination }}" class="normalLink" style="position: relative;">
							<div class="orangeButtonBigMobile type-style-button-text">
								{{ section.settings.button_text }}
							</div>
						</a>
					</div>
				</div>
			</div>
			<div class="col-6 bigImage" >
				<img src="/{{ section.settings.image | image_url }}" style="max-width: 100%; border-radius: 20px;">
			</div>
		</div>
	</div>	
</div>
{% schema %}
  {
  	"name": "2022 - tal liste",
  	"tag": "section",
  	"class": "shopadjust-top",
    "settings": [
	  {
          "type": "richtext",
          "id": "headline",
          "label": "Overskrift"
      },
      {
          "type": "text",
          "id": "button_text",
          "label": "Tekst p√• knap"
      },
      {
          "type": "url",
          "id": "button_destination",
          "label": "Side link"
      },
	  {
          "type": "image_picker",
          "id": "image",
          "label": "Billede"
      }
	],
  	"blocks": [
      {
        "type": "collection",
        "name": "Bullets",
        "settings": [
		  {
            "type": "richtext",
			"id": "content",
            "label": "Content"
          }
        ]
      }
  	],
    "presets": [
      {
        "name": "2022 - tal liste",
        "blocks": [	  
          {
            "type": "collection"
          }
        ]
      }
    ]
  }
{% endschema %}

