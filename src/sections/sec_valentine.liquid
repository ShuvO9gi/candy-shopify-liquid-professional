{%- liquid
  assign product = all_products[section.settings.featured_product]
  assign rightsideproduct = all_products[section.settings.rightside_product]
  assign current_variant = product.selected_or_first_available_variant
  assign rightside_current_variant = rightsideproduct.selected_or_first_available_variant
-%}
<div class="valentines_container">
  <div class="vc_products vc_common">
<div id="ProductSection-{{ section.id }}"
  itemscope itemtype="http://schema.org/Product"
  data-section-id="{{ section.id }}"
  data-section-type="product"
  {% if settings.product_zoom_enable %}
    data-image-zoom="true"
  {% endif %}
  {% if settings.inventory_enable %}
    data-inventory="true"
  {% endif %}
  {% if settings.inventory_transfers_enable %}
    data-incoming-inventory="true"
  {% endif %}>

  {%- render 'product-template-variables', product: product, current_variant: current_variant -%}

  <div class="page-width">
    <div class="grid">
      <div class="grid__item medium-up--one-half">
        {% if section.settings.addcusimg %}
          <img src="{{ section.settings.cusimg | img_url: 'master' }}" class="cusimg">
          {% else %}
        {%- render 'product-images_valentines',
          section_id: section.id,
          product: product,
          product_zoom_size: product_zoom_size,
          product_image_size: product_image_size,
          isModal: false,
          thumbnail_arrows: section.settings.thumbnail_arrows,
          mobile_layout: section.settings.mobile_layout,
          thumbnail_position: section.settings.thumbnail_position,
          video_looping: section.settings.enable_video_looping,
          video_style: section.settings.product_video_style
        -%}
        {% endif %}
      </div>
    <div id="ProductPrice-{{ section.id }}"
            class="product__price{% if current_variant.compare_at_price > current_variant.price %} on-sale{% endif %}">
           <span class="priceText">Kun</span> <span class="priceAmount">{{ current_variant.price | remove: ',' | remove: '.' | remove: '00' }},-</span><span class="product__price_prstk">pr.stk</span>
          </div>
  
      <div class="grid__item medium-up--one-half titleBox">
        <div class="product-single__meta">
          <div class="h1 product-single__title">
            {%- unless product.empty? -%}
              {% if product.metafields.custom.custom_title != blank %}
                {{ product.metafields.custom.custom_title }}
              {%- else -%} 
                {{ product.title }}
              {% endif %}
            {%- else -%}
              {{ 'home_page.onboarding.product_title' | t }}
            {%- endunless -%}
          </div>
         {% if product.metafields.custom.valentines_subtext != blank %}
          <div class="product-single__subtext">
            <p>{{ product.metafields.custom.valentines_subtext }}</p>
          </div>
         {% endif %}
          <div class="product__unit-price product__unit-price--spacing product__unit-price-wrapper--{{ section.id }}{% unless current_variant.unit_price_measurement %} hide{% endunless %}">
            {%- capture unit_price_base_unit -%}
              <span class="product__unit-base--{{ section.id }}">
                {%- if current_variant.unit_price_measurement -%}
                  {%- if current_variant.unit_price_measurement.reference_value != 1 -%}
                    {{ current_variant.unit_price_measurement.reference_value }}
                  {%- endif -%}
                  {{ current_variant.unit_price_measurement.reference_unit }}
                {%- endif -%}
              </span>
            {%- endcapture -%}

            <span class="product__unit-price--{{ section.id }}">{{ current_variant.unit_price | money }}</span>/{{ unit_price_base_unit }}
          </div>

          {%- unless product.empty? -%}
            {%- render 'product-form',
              section_id: section.id,
              product: product,
              current_variant: current_variant
            -%}
          {%- endunless -%}

          {%- if settings.trust_image != blank -%}
            <div class="aos-animate trust-image" style="max-width: {{ settings.trust_image.width }}px;">
              <div class="image-wrap" style="height: 0; padding-bottom: {{ 100 | divided_by: settings.trust_image.aspect_ratio }}%;">
                {%- assign img_url = settings.trust_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                <img class="lazyload"
                    data-src="{{ img_url }}"
                    data-widths="[360, 540]"
                    data-aspectratio="{{ settings.trust_image.aspect_ratio }}"
                    data-sizes="auto"
                    alt="{{ settings.trust_image.alt }}">
                <noscript>
                  <img class="lazyloaded" src="{{ settings.trust_image | img_url: '540x' }}" alt="{{ settings.trust_image.alt }}">
                </noscript>
              </div>
            </div>
          {%- endif -%}

        </div>
      </div>
      {% if section.settings.showprodDescription %}
        <div class="pDescription">
          {{ product.description }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

  </div>
  <div class="vc_newsletterform vc_common">
    {% if section.settings.addklaviyoform %}
     <div class="addform">
      {%- for block in section.blocks -%}
       {%- case block.type -%}
          {%- when 'title' -%}
          <div class="addformtitle" style="font-size: {{block.settings.titlesize}}px; color: {{block.settings.titleColor}}; text-align: {{block.settings.titleAlign}}; padding-top: {{block.settings.paddingtop}}px; padding-bottom: {{block.settings.paddingbottom}}px;">{{ block.settings.title }}</div>

         {%- when 'text' -%}
          <div class="addformtext" style="font-size: {{block.settings.textsize}}px; color: {{block.settings.textColor}}; text-align: {{block.settings.textAlign}}; padding-top: {{block.settings.paddingtop}}px; padding-bottom: {{block.settings.paddingbottom}}px;">{{ block.settings.text }}</div>

         {%- when 'liquid' -%}
          {{ block.settings.liquid }}
       {%- endcase -%}
      {%- endfor -%}  
     </div>       
    {% else %}
      <div id="ProductSection-{{ section.id }}"
          itemscope itemtype="http://schema.org/Product"
          data-section-id="{{ section.id }}"
          data-section-type="rightsideproduct"
          {% if settings.product_zoom_enable %}
            data-image-zoom="true"
          {% endif %}
          {% if settings.inventory_enable %}
            data-inventory="true"
          {% endif %}
          {% if settings.inventory_transfers_enable %}
            data-incoming-inventory="true"
          {% endif %}>
        
          {%- render 'product-template-variables', product: rightsideproduct, current_variant: rightside_current_variant -%}
        
          <div class="page-width">
            <div class="grid">
              <div class="grid__item medium-up--one-half">
                {%- render 'product-images_valentines',
                  section_id: section.id,
                  product: rightsideproduct,
                  product_zoom_size: product_zoom_size,
                  product_image_size: product_image_size,
                  isModal: false,
                  thumbnail_arrows: section.settings.thumbnail_arrows,
                  mobile_layout: section.settings.mobile_layout,
                  thumbnail_position: section.settings.thumbnail_position,
                  video_looping: section.settings.enable_video_looping,
                  video_style: section.settings.product_video_style
                -%}
              </div>
            <div id="ProductPrice-{{ section.id }}"
                    class="product__price{% if rightside_current_variant.compare_at_price > rightside_current_variant.price %} on-sale{% endif %}">
                   <span class="priceText">Kun</span> <span class="priceAmount">{{ rightside_current_variant.price | remove: ',' | remove: '.' | remove: '00' }},-</span><span class="product__price_prstk">pr.stk</span>
                  </div>
          
              <div class="grid__item medium-up--one-half titleBox">
                <div class="product-single__meta">
                  <div class="h1 product-single__title">
                    {%- unless rightsideproduct.empty? -%}
                      {{ rightsideproduct.title }}
                    {%- else -%}
                      {{ 'home_page.onboarding.product_title' | t }}
                    {%- endunless -%}
                  </div>
                 {% if rightsideproduct.metafields.custom.valentines_subtext != blank %}
                  <div class="product-single__subtext">
                    <p>{{ rightsideproduct.metafields.custom.valentines_subtext }}</p>
                  </div>
                 {% endif %}
                  <div class="product__unit-price product__unit-price--spacing product__unit-price-wrapper--{{ section.id }}{% unless rightside_current_variant.unit_price_measurement %} hide{% endunless %}">
                    {%- capture unit_price_base_unit -%}
                      <span class="product__unit-base--{{ section.id }}">
                        {%- if rightside_current_variant.unit_price_measurement -%}
                          {%- if rightside_current_variant.unit_price_measurement.reference_value != 1 -%}
                            {{ rightside_current_variant.unit_price_measurement.reference_value }}
                          {%- endif -%}
                          {{ rightside_current_variant.unit_price_measurement.reference_unit }}
                        {%- endif -%}
                      </span>
                    {%- endcapture -%}
        
                    <span class="product__unit-price--{{ section.id }}">{{ rightside_current_variant.unit_price | money }}</span>/{{ unit_price_base_unit }}
                  </div>
        
                  {%- unless rightsideproduct.empty? -%}
                    {%- render 'product-form-valentine-right',
                      section_id: section.id,
                      product: rightsideproduct,
                      current_variant: rightside_current_variant
                    -%}
                  {%- endunless -%}
        
                  {%- if settings.trust_image != blank -%}
                    <div class="aos-animate trust-image" style="max-width: {{ settings.trust_image.width }}px;">
                      <div class="image-wrap" style="height: 0; padding-bottom: {{ 100 | divided_by: settings.trust_image.aspect_ratio }}%;">
                        {%- assign img_url = settings.trust_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                        <img class="lazyload"
                            data-src="{{ img_url }}"
                            data-widths="[360, 540]"
                            data-aspectratio="{{ settings.trust_image.aspect_ratio }}"
                            data-sizes="auto"
                            alt="{{ settings.trust_image.alt }}">
                        <noscript>
                          <img class="lazyloaded" src="{{ settings.trust_image | img_url: '540x' }}" alt="{{ settings.trust_image.alt }}">
                        </noscript>
                      </div>
                    </div>
                  {%- endif -%}
        
                </div>
              </div>
              {% if section.settings.showprodDescription %}
                <div class="pDescription">
                  {{ rightsideproduct.description }}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
    {% endif %}  
  </div>
</div>  
