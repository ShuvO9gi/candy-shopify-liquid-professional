<script>
  // Load jQuery
  var jqmsg = document.createElement('script');
  jqmsg.src = "https://code.jquery.com/jquery-3.6.4.min.js";
  jqmsg.onload = function() {
    jQuery.noConflict();
    jQuery(document).ready(function($) {
      
      // Check if the Quill editor element exists before initializing Quill
      if ($('#quill-editor').length > 0) {

        // Initialize Quill editor
        var quill = new Quill('#quill-editor', {
          theme: 'snow',
          placeholder: 'Skriv den hilsen der skal pÃ¥ kortet',
          modules: {
            toolbar: [
              ['bold', 'italic', 'underline'],
              [{ 'list': 'ordered' }, { 'list': 'bullet' }],
              [{ 'emoji': true }]
            ],
            'emoji-toolbar': true,
            'emoji-textarea': false,
            'emoji-shortname': true
          }
        });

        // Character count and textarea sync
        quill.on('text-change', function() {
          var plainText = quill.getText().trim(); // Get plain text (without HTML)
          var characterCount = plainText.length;
          $('#characterCount').text(characterCount + ' af 500 tegn');

          // Limit text to 500 characters
          if (characterCount > 500) {
            var truncatedText = plainText.slice(0, 500);
            quill.setText(truncatedText); // Truncate the Quill editor content
            $('#characterCount').text('500 af 500 tegn');
          }

          // Sync the Quill content (as HTML) with the textarea
          $('#CartNoteDrawer').val(quill.root.innerHTML);
        });

        // Sync Quill content before form submission
        $('form').on('submit', function() {
          var formattedMessage = quill.root.innerHTML;
          $('#CartNoteDrawer').val(formattedMessage); // Set the textarea value
        });
      } else {
        console.error('Quill editor container not found: #quill-editor');
      }
    });
  };
  document.body.appendChild(jqmsg);
</script>
