<div class="index-section">
  <div class="page-width">
    {%- capture image_layout -%}
      <div class="feature-row__item">
        <div class="contact__page__content--img" max-width: {{ block.settings.image_width }}px;">
          {%- if block.settings.image != blank -%}
            {%- if block.settings.button_label != blank and block.settings.button_link != blank %}<a href="{{ block.settings.button_link }}">{% endif -%}
            <div class="image-wrap" style="height: 0; padding-bottom: {{ 100 | divided_by: block.settings.image.aspect_ratio }}%; background: transparent;">
              {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
              <img class="feature-row__image lazyload"
                  data-src="{{ img_url }}"
                  data-widths="[180, 360, 540, 720, 900, 1080]"
                  data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                  data-sizes="auto"
                  alt="{{ block.settings.image.alt }}">
            </div>
            {%- if block.settings.button_label != blank and block.settings.button_link != blank %}</a>{% endif -%}
          {%- else -%}
            <div class="image-wrap">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- endcapture -%}

    {%- if block.settings.layout == 'down' -%}
    <div class="" data-aos>
      <div class="feature-row__text">
        {%- if block.settings.title != blank -%}
          <p class="h3 contact__page__feature--text">{{ block.settings.title | escape }}</p>
        {%- endif -%}
        {%- if block.settings.text != blank -%}
          <div class="rte contact__page__feature--text">{{ block.settings.text }}</div>
        {%- endif -%}
        {%- if block.settings.button_label != blank -%}
          <a href="{{ block.settings.button_link }}" class="btn mb-3">
            {{ block.settings.button_label }}
          </a>
        {%- endif -%}
        {%- if block.settings.subtitle != blank -%}
          <p class="h3 contact__page__feature--text">{{ block.settings.subtitle }}</p>
        {%- endif -%}
      </div>

      {%- if block.settings.layout == 'down' -%}
        {{ image_layout }}
      {%- endif -%}
    </div>
    {%- endif -%}
    {%- if block.settings.layout != 'down' -%}
      <div class="feature-row" data-aos>
        <div class="feature-row__item feature-row__text feature-row__text--{{ block.settings.layout }}">
          {%- if block.settings.subtitle != blank -%}
            <p class="h5">{{ block.settings.subtitle }}</p>
          {%- endif -%}
          {%- if block.settings.title != blank -%}
            <p class="h3">{{ block.settings.title | escape }}</p>
          {%- endif -%}
          {%- if block.settings.text != blank -%}
            <div class="rte featured-row__subtext">{{ block.settings.text }}</div>
          {%- endif -%}
          {%- if block.settings.button_label != blank -%}
            <a href="{{ block.settings.button_link }}" class="btn">
              {{ block.settings.button_label }}
            </a>
          {%- endif -%}
        </div>

        {%- if block.settings.layout == 'left' -%}
          {{ image_layout }}
        {%- endif -%}

        {%- if block.settings.layout == 'right' -%}
          {{ image_layout }}
        {%- endif -%}
        {%- if block.settings.layout == 'down' -%}
          {{ image_layout }}
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
</div>
