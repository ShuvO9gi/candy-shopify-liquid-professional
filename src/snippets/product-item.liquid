<div class="product-card relative w-full h-full">
  <a class="absolute top-0 left-0 w-full h-full z-20" href="{{ product.url }}"></a>

  <div class="product-card__inner flex flex-col relative h-full pr-2 pb-3 sm:pb-5 pl-2" data-item-inner>
    <div class="relative w-full mt-0 mb-2 mx-auto z-10">
      {%- render 'image', image: product.featured_image -%}
    </div>

    <p class="product-card--title text-center text-xs font-subheading font-bold">{{ product.title }}</p>
    <p class="product-card--vendor mb-2 text-pink text-center text-xs font-normal">{{ 'bland_selv.general.from' | t }} {{ product.vendor }}</p>

    <div class="flex item-center justify-center">
      <p class="mb-5 text-center font-body font-normal">{{ product.price | money }}</p> 
      {%- if product.compare_at_price > product.price -%}
        <p class="old-price ml-2 line-through text-grey">{{ product.compare_at_price }}</p>
      {%- endif -%}
    </div>
      

    <div class="product-card__btn-wrapper relative h-10 mt-auto">
      <button class="btn relative z-10 w-full h-full" type="button" >
        <span>{{ 'products.general.see_product' | t }}</span>
      </button>
    </div>
  </div>
</div>